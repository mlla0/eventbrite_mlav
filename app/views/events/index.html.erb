<div class="jumbotron jumbotron-fluid" style="margin-top: 5vh">
  <div class="container text-center">
    <h1 class="display-4 montserrat-light">Welcome on PoowEvent!</h1>
    <p class="lead lora-regular">To create your own event, <%= link_to "click here", new_event_path, :class => "text-muted" %></p>
  </div>
</div>

<div class="list-group list-group-flush" style="margin-top: 5vh">
	<% @events.each do |event| %>
	<a href="<%= event_path(event.id) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"><span class="lead lora-bold"><%= event.title %></span> <span><h1 class="montserrat-light" style="display: inline;"><%= event.start_date.strftime("%d") %></h1><h4 class="montserrat-light" style="display: inline;"><%= event.start_date.strftime(".%m.%Y") %></h4></span></a>
	<% end %>
</div>