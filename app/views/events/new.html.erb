 <div class="row justify-content-center align-items-center" style="margin-top: 10vh">

            <div class="col-md-8 col-sm-12">

                  <%= form_tag url_for(action: 'create'), method: "post" do %>

                    <div class="form-group">
                      <%= label_tag 'Title' %>
                      <%= text_field_tag 'title', "#{@event.title}", :class => "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Description' %>
                      <%= date_field_tag 'description', "", :class => "form-control", :rows => "4" %>
                    </div>

                    <%= submit_tag "Edit Profile", :class => "btn btn-dark" %>

                  <% end %>

            </div>
      </div>




