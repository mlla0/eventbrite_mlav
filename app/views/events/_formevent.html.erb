<%= form_tag url_for(action: 'create'), method: "post", multipart: true do %>

<div class="form-group">
<%= label_tag 'Title' %>
<%= text_field_tag 'title', "", :class => "form-control" %>
</div>

<div class="form-group">
<%= label_tag 'Description' %>
<%= text_area_tag 'description', "", :class => "form-control", :rows => "4" %>
</div>

<div class="form-group">
<%= label_tag 'Start Date' %>
<%= date_field_tag 'start_date', "", :class => "form-control" %>
</div>

<div class="form-group">
<%= label_tag 'Duration' %>
<%= text_field_tag 'duration', "", :class => "form-control", :rows => "4" %>
</div>

<div class="form-group">
<%= label_tag 'Price' %>
<%= text_field_tag 'price', "", :class => "form-control", :rows => "4" %>
</div>

<div class="form-group">
<%= label_tag 'Location' %>
<%= text_field_tag 'location', "", :class => "form-control", :rows => "4" %>
</div>

<div class="form-group">
<%= label_tag 'Event picture (mandatory)' %>
<%= file_field_tag :event_picture, :class => "form-control-file" %>
</div>

<%= submit_tag "Create Event", :class => "btn btn-dark" %>

<% end %>