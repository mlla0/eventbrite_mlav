 <div class="row justify-content-center align-items-center" style="margin-top: 10vh;">

            <div class="col-md-8 col-sm-12">

                  <%= form_tag url_for(action: 'update'), method: "put" do %>

                    <div class="form-group">
                      <%= label_tag 'First Name' %>
                      <%= text_field_tag 'first_name', "#{@user.first_name}", :class => "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Last Name' %>
                      <%= text_field_tag 'last_name', "#{@user.last_name}", :class => "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Description' %>
                      <%= text_area_tag 'description', "#{@user.description}", :class => "form-control", :rows => "4" %>
                    </div>

                    <%= submit_tag "Edit Profile", :class => "btn btn-dark" %>

                  <% end %>

            </div>

      </div>