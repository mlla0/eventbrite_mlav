<div class="row justify-content-center" style="margin-top: 5vh">
  <div class="col-md-4 col-sm-10 border border-dark rounded" style="padding: 5vh">

<h2>Change your password</h2>
<hr/>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "New password" %><br />
    
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => "form-control" %>
    <% if @minimum_password_length %>
      <span class="montserrat-light"><%= @minimum_password_length %> characters minimum</span><br />
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", :class => "btn btn-outline-info" %>
  </div>
<% end %>
<br/>
<hr/>

<%= render "devise/shared/links" %>

</div>
</div>